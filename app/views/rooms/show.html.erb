  <% @entries.each do |e| %>
    <% unless e.user == current_user %>
    <p class="text-center"><%= e.user.name %>さんとのチャット</p>
    <% end %>
  <% end %>

<div class="line-bc"><!--①LINE会話全体を囲う-->
  <% if @messages.present? %>
    <% @messages.each do |m| %>
  <!--②左コメント始-->
      <div class="balloon6">
        <% unless current_user == m.user %>
          <div class="name text-left">
            <%= m.user.name %>
          </div>
          <div class="faceicon">
            <% if m.user.image? %>
              <%= image_tag m.user.image.url, :alt => '/' %>
            <% else %>
              <%= image_tag ('images.png'), :alt => '/' %>
            <% end %>
          </div>
          <div class="chatting">
            <div class="says">
              <% if m.image? %>
                <p><%= m.content %> <br>
                <%= image_tag m.image.url %></p>
              <% elsif %>
                <p><%= m.content %></p>
              <% end %>  
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>  
  <!--②/左コメント終-->
  
  <!--③右コメント始-->
  <% if @messages.present? %>
    <% @messages.each do |m| %>
      <div class="mycomment">
        <% if current_user == m.user %>
          <% if m.image? %>
            <p><%= m.content %> <br>
            <%= image_tag m.image.url %></p>
          <% elsif %>
            <p><%= m.content %></p>
          <% end %>  
        <% end %>
      </div>
    <% end %>
  <% end %>  
  <!--/③右コメント終-->
  
    <div class="posts">
      <%= form_for @message do |f| %>
        <%= f.text_field :content, placeholder: "メッセージを入力" , size: 40, class: "form-text-field" %>
        <%= f.file_field :image, class: 'form-control' %>
        <%= f.hidden_field :room_id, value: @room.id %>
        <%= f.submit "送信",class: 'form-submit'%>
      <% end %>
    </div>
</div><!--/①LINE会話終了-->