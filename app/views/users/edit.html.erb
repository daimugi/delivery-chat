<h1 class="text-center">ユーザー編集</h1>
<% if logged_in? %>
<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: @user, local: true) do |f| %>
    
      <div class="form-group">
        <i class="fas fa-user"></i> <%= f.label :name, 'お名前' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <i class="fas fa-comment"></i> <%= f.label :introduction, '自己紹介' %>
        <%= f.text_area :introduction, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <i class="fas fa-home"></i> <%= f.label :address, 'ご住所' %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <i class="fas fa-image"></i> <%= f.label :image, 'プロフィール画像' %>
        <%= f.file_field :image, class: 'form-control' %>
      </div>
      
      <%= f.submit '更新する', class: 'btn btn-primary' %>
    <% end %>  
  </div>
</div>
<% end %>