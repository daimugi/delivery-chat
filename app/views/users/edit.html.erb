<h1 class="text-center users_edit">ユーザー編集</h1>
<% if logged_in? %>
    <%= form_with(model: @user, local: true) do |f| %>
    
      <div class="form-group">
        <i class="fas fa-user"></i> <%= f.label :name, 'お名前' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <i class="fas fa-comment"></i> <%= f.label :introduction, 'コメント' %>
        <%= f.text_area :introduction, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <i class="fas fa-home"></i> <%= f.label :address, 'ご住所' %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <i class="fas fa-image"></i> <%= f.label :image, 'プロフィール画像' %>
        <%= f.file_field :image, class: 'form-control' %>
      </div>
      
      <div class="users_update_btn">
        <%= f.submit '更新する', class: 'btn btn-primary' %>
      </div>
    <% end %>  
<% end %>