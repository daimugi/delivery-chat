<div class="text-center">
  <h1><i class="fas fa-user-plus"></i> 新規登録</h1>
</div>

  <%= form_with(model: @user, local: true) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <div class="form-group">
      <i class="fas fa-user"></i> <%= f.label :name, 'お名前' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <i class="fas fa-envelope"></i> <%= f.label :email, 'メール' %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <i class="fas fa-home"></i> <%= f.label :address, 'ご住所' %>
      <%= f.text_field :address, class: 'form-control' %>
    </div>

    <div class="form-group">
      <i class="fas fa-key"></i> <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, 'パスワード再入力' %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
    
    <div class="users_create_btn">
      <%= f.submit '登録する', class: 'btn btn-primary' %>
    </div>
  <% end %>