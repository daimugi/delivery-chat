<div class="user-post">
  <% if current_user == @user %> 
    <%= link_to '仕事を依頼', new_post_path, class: 'btn btn-primary btn-lg' %>
  <% end %>
</div>
 
<div class="chat-btn">  
  <% unless @user.id == current_user.id %>
    <% if @isRoom == true %>
      <p><a href="/rooms/<%= @roomId %>" class="btn btn-success btn-lg">チャットへ</a></p>
    <% else %>
      <%= form_for @room do |f| %>
        <%= fields_for @entry do |e| %>
          <%= e.hidden_field :user_id, value: @user.id %>
        <% end %>
        <%= f.submit 'チャットを始める', class: "btn btn-primary btn-lg show-btn" %>
      <% end %>
    <% end %>
  <% end %>  
</div>  
    