<div class="user-show">
  <div class="show__face">
    <% if @user.image? %>
      <%= image_tag @user.image.url, class: 'show__img', :alt => '/' %>
    <% else %>
      <%= image_tag ('images.png'), class: 'show__img', :alt => '/' %>
    <% end %>
    <div class="show__name"><%= @user.name %></div>
  </div>
  <div class="show__address">
    <p><i class="fas fa-home"></i>　<%= @user.address %></p>
  </div>
  <div class="show__desc">
    <% if @user.introduction? %> 
      <%= @user.introduction %>
    <% else %>
      <p>よろしくお願いします</p>
    <% end %> 
  </div>
</div>

<div class="user-map">
  <% unless current_user == @user %>
    <p class="text-center">
      <%= current_user.name %>さんとの距離約<%= @distance %>　※距離は直線距離　<br>
      <i class="fas fa-home"></i> <%= @user.name %>さんのご住所　<%= @user.address %></p>
  <% else %>
    <p class="text-center"><i class="fas fa-home"></i> あなたのご住所　<%= @user.address %></p>
  <% end %>
  <div id='map'></div>
  <script>
    let map;
  
