<h2 class="text-center">依頼投稿ページ</h2>
<div class="row">
  <aside class="col-sm-4">
    <%= form_with(model: @post, local: true) do |f| %>
      <div class="form-group">
        <%= f.text_area :content, class: 'form-control', rows: 5 %>
      </div>
        <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
    <% end %>    
  </aside>
</div>