<p class="text-center sessions_new">ログイン画面</p>

<%= form_with(url: login_path, scope: :session, local: true) do |f| %>

  <div class="form-group">
    <i class="fas fa-envelope"></i> <%= f.label :email, 'メール' %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <i class="fas fa-key"></i> <%= f.label :password, 'パスワード' %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>
  
  <div class="sessions_new_btn">
    <%= f.submit 'ログイン', class: 'btn btn-primary' %>
  </div>
<% end %>

<p class="text-center sign_up"> <%= link_to '新規登録', signup_path %>はお済みですか?</p>
